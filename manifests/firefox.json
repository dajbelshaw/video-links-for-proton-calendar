{
  "manifest_version": 3,
  "name": "Proton Calendar Video Links",
  "version": "1.1.0",
  "description": "Add Jitsi, BigBlueButton, Whereby, or custom video conferencing links to Proton Calendar events",
  "permissions": ["storage"],
  "host_permissions": ["*://calendar.proton.me/*"],
  "content_scripts": [
    {
      "matches": ["*://calendar.proton.me/*"],
      "js": ["content-script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Configure video services"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "proton-calendar-video@extension",
      "strict_min_version": "109.0"
    }
  }
}
